@model fjtc.com.Models.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>17Team内容管理系统</title>
    <script src="@Url.Content("~/Scripts/jquery-2.1.4.min.js")" type="text/javascript"></script>
    <script language="javascript" type="text/javascript">
        function checkform() {
            if ($("#UserName").val() == "") {
                alert("请输入账号");
                $("#UserName").focus();
                return false;
            }
            if ($("#Password").val() == "") {
                alert("请输入密码");
                $("#Password").focus();
                return false;
            }
            if ($("#VerifyCode").val() == "") {
                alert("请输入验证码");
                $("#VerifyCode").focus();
                return false;
            }
            return true;
        }
        window.onload = function () {
            $("#UserName").focus();
        }
    </script>
    <style type="text/css">
        html {
            width: 100%;
            height: 100%;
            overflow: hidden;
            font-style: sans-serif;
        }

        body {
            width: 100%;
            height: 100%;
            font-family: 'Open Sans',sans-serif;
            margin: 0;
            background-color: #4A374A;
        }

        #login {
            position: absolute;
            top: 50%;
            left: 50%;
            margin: -150px 0 0 -150px;
            width: 300px;
            height: 300px;
        }

            #login h1 {
                color: #fff;
                text-shadow: 0 0 10px;
                letter-spacing: 1px;
                text-align: center;
            }

        h1 {
            font-size: 2em;
            margin: 0.67em 0;
        }

        input {
            width: 278px;
            height: 18px;
            margin-bottom: 10px;
            outline: none;
            padding: 10px;
            font-size: 13px;
            color: #fff;
            text-shadow: 1px 1px 1px;
            border-top: 1px solid #312E3D;
            border-left: 1px solid #312E3D;
            border-right: 1px solid #312E3D;
            border-bottom: 1px solid #56536A;
            border-radius: 4px;
            background-color: #2D2D3F;
        }

        .but {
            width: 300px;
            min-height: 50px;
            display: block;
            background-color: #4a77d4;
            border: 1px solid #3762bc;
            color: #fff;
            padding: 9px 14px;
            font-size: 24px;
            line-height: normal;
            border-radius: 5px;
            margin: 0;
        }
    </style>
</head>
<body>
    <form method="post" action="@Url.Action("Index","Account",new {area="Admin"})" id="frmxx">
        @Html.AntiForgeryToken()
        <div id="login">
            <h1>后台登录</h1>
            @Html.TextBoxFor(m => m.UserName, new { placeholder = "用户名", required = "required" })
            @Html.PasswordFor(m => m.Password, new { placeholder = "密码", required = "required" })
            <div>
                @Html.TextBoxFor(m => m.VerifyCode, new { placeholder = "验证码", required = "required", style = "width:150px;" })
                <img style="float: right; cursor: hand; width: 100px; height: 40px;cursor:pointer" src="@Url.Action("VerifyCode","Account",new {area="Admin"})" alt="看不清？点击更换" valign="top" onclick="this.src=this.src+'?'" />
            </div>
            @Html.ValidationMessage("UserName")
            @Html.ValidationMessage("Password")
            @Html.ValidationMessage("VerifyCode")
            <input class="but" type="submit" onclick="return checkform()" value="登录" />
        </div>
    </form>
</body>
</html>
